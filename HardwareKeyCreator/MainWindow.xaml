<Window x:Class="HardwareKeyCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardwareKeyCreator"
        mc:Ignorable="d"
        Title="Emerson Hardware Key Creator" Height="450" Width="1059">
    <Grid>
        <GroupBox  x:Name="grpXMLInfo"  Header="XML Info" HorizontalAlignment="Left" Foreground="Blue" Height="66" VerticalAlignment="Top" Width="995" Margin="28,58,-231,0">
            <TextBlock  x:Name="txtXMLPath" Text ="hello" HorizontalAlignment="Left" Margin="185,0,0,0"  FontFamily="Arial Narrow" FontSize="15" Foreground="Blue" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="722" Grid.ColumnSpan="4"/>
            <!--<Label x:Name="lblXMLPath" Content="Hello"  Margin="185,0,0,0" />-->
        </GroupBox>
        <Button Content="Upload XML" HorizontalAlignment="Left" Margin="944,82,-227,0" VerticalAlignment="Top" Width="75" Click="BrowseXmlFile" Background="White" Height="30" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <GroupBox  x:Name="grpOrderInfo"  Header="Order Info" HorizontalAlignment="Left" Foreground="Blue" Height="76" VerticalAlignment="Top" Width="995" Margin="28,129,-231,0">
            <DataGrid x:Name="dgvInfo" Height="45"   IsReadOnly="True" HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Stretch" 
                ColumnWidth="*"  Margin="10,5,18,0" VerticalAlignment="Top"/>
        </GroupBox>

        <GroupBox  x:Name="grpKeyInfo"  Header="Key Info" HorizontalAlignment="Left" Foreground="Blue" Height="73" VerticalAlignment="Top" Width="995" Margin="28,208,-231,0">
            <DataGrid x:Name="dgvKey" Height="45" Margin="10,7,18,0" VerticalAlignment="Top"   IsReadOnly="True" HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Stretch" 
                ColumnWidth="*"/>
        </GroupBox>
        <GroupBox  x:Name="grpLicInfo_Copy"  Header="Lic Info" HorizontalAlignment="Left" Foreground="Blue" Height="77" VerticalAlignment="Top" Width="995" Margin="26,284,-229,0">
            <DataGrid x:Name="dgvLic" Height="45" Margin="10,5,18,0" VerticalAlignment="Top"   IsReadOnly="True" HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Stretch" 
                ColumnWidth="*"/>
        </GroupBox>
        <Image HorizontalAlignment="Left" Height="42" Margin="4,0,0,0" VerticalAlignment="Top" Width="52" Source="icon.ico" Stretch="UniformToFill"/>
        <Label Content="Emerson Hardware Key Creator" HorizontalAlignment="Right" Margin="0,11,323,0" FontFamily="Arial Black" FontSize="18" FontStyle="Normal" Foreground="Blue" VerticalAlignment="Top" RenderTransformOrigin="0.526,-0.385" Opacity="0.7" Width="430"/>


        <Button Content="Upload XML" HorizontalAlignment="Left" Margin="942,374,-225,0" VerticalAlignment="Top" Width="75" Click="BrowseXmlFile" Background="White" Height="30" RenderTransformOrigin="-1.573,11.533" >
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Label Content="Select XML Path" Foreground="Blue" FontSize="15"   HorizontalAlignment="Left" Margin="44,82,0,0" VerticalAlignment="Top" FontWeight="Medium"/>
    </Grid>
</Window>
